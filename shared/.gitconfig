[alias]
	amend = commit --amend --no-edit
	cargo = "! cargo"
	continue = -c core.editor=true rebase --continue
	force = push --force-with-lease
	graph = l --graph --exclude refs/stash --branches
	l = log --pretty=tformat:'%C(auto)%h %C(cyan)%ad %C(171)<%an>%C(auto)%d %s' --date=short
	ll = l -20
	nvim = "! git -c core.editor=nvim"
	git = "! git"
	patch = add --patch
	st = status -sb
[core]
	editor = code --wait
	autocrlf = false
	eol = lf
	excludesFile = ~/.gitignore
	pager = less -+X -x5,9
[commit]
	verbose = true
	gpgsign = true
[init]
	defaultBranch = "main"
[interactive]
	singleKey = true
[log]
	date = iso-local
[pager]
	branch = false
	stash = false
[pull]
	rebase = true
[rebase]
	updateRefs = true
	autosquash = true
[tag]
	gpgsign = true
